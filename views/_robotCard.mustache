<article class="userCard">
  <div class="cardHead">
    <div class="avatar">
      <img class="pic" src="{{avatar}}" alt="{{name}}">
    </div>
    <div class="stats">
      <h1> {{name}} </h1>
      <p> {{location}} | {{company}} </p>
      <p> {{email}} | {{phone}} </p>
    </div>
  </div>
  <div class="hireFor">
    <section class="schools">
      <p> Education: {{university}} </p>
    </section>
    <div class="rSkills">
      <p> Skills: </p>
      <ul>
        <li> {{skills}} </li>
      </ul>
    </div>
  </div>
</article>
